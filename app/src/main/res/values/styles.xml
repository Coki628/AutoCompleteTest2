<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 入力テキストボックス共通スタイル -->
    <style name="inputTextBox">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_input_box</item>
    </style>

    <!-- 汎用ボタン共通スタイル -->
    <style name="commonButton">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- バーボタン共通スタイル -->
    <style name="barButton">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- LinearLayoutで横に並べるバーボタン用のスタイル -->
    <style name="horizontalBarButton" parent="barButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- LinearLayoutで縦に並べるバーボタン用のスタイル -->
    <style name="verticalBarButton" parent="barButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- 左右の線用スタイル -->
    <style name="stroke">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/background_stroke</item>
    </style>

    <!-- 左右の線のカバー(反対側の線を隠す)用スタイル -->
    <style name="strokeCover">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/background_stroke_cover</item>
    </style>

</resources>
