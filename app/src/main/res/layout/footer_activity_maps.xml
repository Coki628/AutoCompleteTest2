<?xml version="1.0" encoding="utf-8"?>
<!-- 周辺情報画面のフッター -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent" >

    <Button
        android:id="@+id/button_suggested"
        android:onClick="callSuggestedStations"
        android:text="@string/koho_eki"
        style="@style/horizontalBarButton" />

    <Button
        android:id="@+id/button_share"
        android:onClick="callLINE"
        android:text="@string/kyoyu"
        style="@style/horizontalBarButton" />

    <Button
        android:id="@+id/button_route"
        android:onClick="callRoute"
        android:text="@string/route"
        style="@style/horizontalBarButton" />

    <Button
        android:id="@+id/button_genre"
        android:onClick="callGenre"
        android:text="@string/genre"
        style="@style/horizontalBarButton" />

</LinearLayout>